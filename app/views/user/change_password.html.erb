</script>


<%= form_tag("/user/change_password", id: "change-form", method: 'post', enctype: 'multipart/form-data') do %>

 <%if User.current.admin?%>
   <%= text_field_tag "user[username]", params[:username],
                       {:id => 'username', :field_type => 'alpha',
                        :helpText => 'Username',
                        :textCase => "lower",
                        :ajaxURL => '/user/username?search_string=',
                        :allowFreeText => false }%>
 <%else%>
    <input name="user[username]" id="username" type="hidden" value="<%=User.current.username %>" />
 <%end%>


<%= password_field_tag "user[password]", params[:password],
                     {:id => 'password', :field_type => 'alpha',
                      :helpText => 'New Password',
                      :textCase => "lower",
                      :allowFreeText => true }%>

  <%= password_field_tag "user[confirm_password]", params[:confirm_password],
                     {:id => 'confirm_password', :field_type => 'alpha',
                      :helpText => 'Confirm Password',
                      :textCase => "lower",
                      :allowFreeText => true }%>

<%end%>
