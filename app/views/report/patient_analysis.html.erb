<!-- Get header -->
<%= render partial: 'home/header' %>

<!-- Layout report -->
	<!-- report header -->
	<div class="report_header">
		<h1 class="report_title">Name of Report</h1>
		<div class="control_buttons">
			<!-- Go back to reports main page -->
			<button onclick="window.location='/report'">Back</button>

			<!-- Go forth to the application main page -->
			<button onclick="window.location='/'">Finish</button>
		</div>
	</div>

	<!-- report control panel -->
	<div class="control_panel">
		<!-- controls for the entire report come here 
			filter by demographics, gender, etc
		-->
	</div>

	<!-- report table filled with data -->
	<table class="table">
		<tr class="row row_title">
			<th class="col col_title">
				Encounter/Observation
			</th>
			<th class="col col_title">
				Count
			</th>
			<th class="col col_title">
				Percentage
			</th>
		</tr>
		<!--loop through entered data to generate records. 
			For the time being looping through 6 times. Harcoded to be changed.-->
		<% (1..6).each do %>
		<tr class="row row_data">
			<td class="col col_data">
				encounter dynamic_load
			</td>
			<td class="col col_data">
				count dynamic_load
			</td>
			<td class="col col_data">
				percentage dynamic_loaded
			</td>
		</tr>
		<% end %>
		<!-- end loop -->
	</table>
<!-- end report layout -->

<!-- Get footer -->
<%= render partial: 'home/footer' %>