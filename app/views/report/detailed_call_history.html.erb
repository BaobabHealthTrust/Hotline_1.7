
<style>

    body {
        -webkit-user-select: none;  /* Chrome all / Safari all */
        -moz-user-select: none;     /* Firefox all */
        -ms-user-select: none;      /* IE 10+ */
        user-select: none;          /* Likely future */
    }

    img {
        user-drag: none;
        user-select: none;
        -moz-user-select: none;
        -webkit-user-drag: none;
        -webkit-user-select: none;
        -ms-user-select: none;
        pointer-events: none;
    }

    .main-page-container  {
        display: table;
        width: 100%;
        padding: 0px 1px 0px 1px;
    }

    .main-page-container-rows  {
        display: table-row;
    }

    .cells {
        display: table-cell;
    }
    /* ..................... header css ends ............................... */

    .main-table  {
        display: table;
        width: 100%;
        padding: 0px 1px 0px 1px;
    }

    .main-table-rows  {
        display: table-row;
    }

    .main-table-cells {
        display: table-cell;
    }


    /* .................. button css .............. */
    .divbtn {
        height: 265px;
        display: table;
        margin-top: 10px;
        cursor:pointer;
        box-shadow: inset 2px -4px 2px 0px;
        background-color: white;
        border-radius: 7px;
        width: 99%;
        border: solid black 3px;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        -moz-box-shadow:    inset 0 0 10px #000000;
        -webkit-box-shadow: inset 0 0 10px #000000;
        box-shadow:         inset 0 0 10px #000000;
        text-align: center;
    }

    .icons {
        width: 160px;
        height: 160px;
        margin-top: 10%;
        text-align: middle;
    }

    .divbtn p {
        font-weight: bold;
    }

    .clickable {
        cursor: pointer;
    }

    /* hide Datatable search box until a TouchKeyBoard is implemented */
    .dataTables_filter {
        display: none;
    }
    /* .................. button css ends .............. */

</style>

<%= render :partial => '/home/header' %>

<%= stylesheet_link_tag 'jquery.dataTables.min' %>

<%= javascript_include_tag 'jquery' %>
<%= javascript_include_tag 'jquery.dataTables.min' %>
<br>
<div style="padding-bottom: 70px;">
    <table id="call_history" class="display">
        <thead>
            <tr>
                <th>Name</th>
                <th>IVR Number</th>
                <th>Phone Number</th>
                <th>District</th>
                <th>Hotline User</th>
            </tr>
        </thead>
        <tbody>
            <% @callers.each do |caller| %>
                <tr onclick="#javascript:drillDown(<%= caller[0] %>)" class="clickable">
                    <% caller.shift %>
                    <% caller.each_with_index do |cell_data, index| %>
                        <td><%= cell_data %></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<script>
	$(document).ready(function(){
		$('#call_history').DataTable();
	});

	function drillDown(patient_id) {
		window.location = "/patient/dashboard/"+patient_id+"/recent_calls"
    }
</script>

<%= render :partial => 'footer' %>
