        }else{
          sympDisplay += "<span class='title' style='font-size:22px;'>" + humanize(symptomIds[i]) + "</span><br />";
        }
      }else{
        if(symptomIds[i].toLowerCase() == 'first_question'){
          noSympDisplay += "<span class='title' style='font-size:22px;'>" + $('start').value +  "</span><br />";
