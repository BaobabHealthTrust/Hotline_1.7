    $('inputFrame'+tstCurrentPage).innerHTML = '<div id="dangerSigns" style="height: 520px;">' + display + '</div>' ;
    $("clearButton").style.display = "none";
    //$('tt_staticControls').style.cssText = "height:670px !important";
    //
