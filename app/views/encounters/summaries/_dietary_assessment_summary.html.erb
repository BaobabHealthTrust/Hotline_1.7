<style>
    .diet{
        border: 1px solid #d3d3d3 !important;
        width: 97%;
        margin: auto;
        display: table-cell;
        padding: 0px;
    }
    #table2{
        width: 100%;
        margin:auto;
        margin-top: 10px;
        font-size: 1em;
    }
    #table2 caption{
        font-size: 1em;
        font-weight: bold;
        width: 90%
    }

    #table2 th{
        background-color: #b9c7cc;
        border: 0px solid white;
        padding: 7px;
    }

    #table2 tr .even{
        padding: 0px;
        background: ghostwhite !important;
    }

    #table2 tr .odd{
        padding: 3px;
        border-bottom: 1px solid lightgray;
    }
    .food-icon{
        height: 110px;
        width: 110px;
        margin-left: 15%;
        margin-bottom: 15px;
    }

    .done{
        width: 40px;
        height: 40px;
    }

</style>
<% @food_groups = @groups[@group.downcase] %>

<div class="diet">
  <table class="table" id="table2">

    <thead class="header">
    <tr class="row">
      <% @food_groups.each do |group|%>
        <th><%= group%></th>
      <% end %>
    </tr>
    </thead>
    <tbody>
        <tr class="row">
          <% @food_groups.each do |group|%>
              <td valign="top" style="height: 30vh;font-size: 0.83em;padding-top: 20px;width:<%= 100/@food_groups.length%>%" class="odd">
                <% if @example_foods[group][1].present? %>
                    <div style="width: 100%;">
                      <%=image_tag("icons/#{@example_foods[group][1]}", class: 'food-icon')%>
                    </div>
                    <%= raw(@example_foods[group][0].join(', '))%>
                <% else %>
                    <h1 style="text-align: center; padding-top: 45%; font-size: 2em;"><%= raw(@example_foods[@food_groups.last][0].join(', '))%></h1>
                <% end %>
              </td>
          <% end %>
        </tr>

        <tr class="row">
          <% @food_groups.each do |group|%>
              <td valign="middle" style="text-align: center;" class="even">
                <% if @consumed_groups.include?(group)%>
                    <%=image_tag('data:image/png;base64,',
                                 class: "done")%>
                <% end %>
              </td>
          <% end %>
        </tr>
    </tbody>
  </table>
</div>