<style>

  .table-div  {
    display: table;
    width: 100%;
    padding: 0px 1px 0px 1px;
  }

  .row  {
    display: table-row;
  }

  .cell {
    display: table-cell;
    width: 20%;
  }

  .btn {
    padding-bottom: 5px;
    text-align: center;
    margin: 5px;
    border: 1px solid #2e6da4;
    width: 99%;

    cursor: pointer;
    box-shadow: inset 2px -4px 2px 0px;
    background-color: white;
    border-radius: 7px;
    width: 99%;
    border: solid black 3px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -moz-box-shadow:    inset 0 0 10px #000000;
    -webkit-box-shadow: inset 0 0 10px #000000;
    box-shadow:         inset 0 0 10px #000000;


  }

  .btn p {
    font-weight: bold;
  }

  .task-icons {
    height: 90px;
    width: 90px;
    margin-top: 10%;
  }
  .done{
      position: absolute;
      height: 60px;
      width: 60px;
      margin-top: 10px; !important;
      margin-left: 230px !important;
  }
        /* Hide nutrition module sub buttons */
  .clinical_assessment, .dietary_assessment {
      display: none;
  }
</style>

<script>
    function showNutrition() {
        document.getElementById('clinical_assessment').style.display = 'inline';
        document.getElementById('dietary_assessment').style.display = 'inline';
    }
    function hideNutrition() {

    }
</script>



<div class="table-div">
    <!-- loop -->
    <% buttons_per_row = 5%>
    <% @tasks.each_with_index do |task, i|
            new_role = (i % buttons_per_row == 0)
            end_role = (i > 0 && i % buttons_per_row == 0 && i < @tasks.length )
            halt = (i == @tasks.length - 1)
    %>
        <% if end_role %>
              </div>
        <% end %>
        <%if new_role %>
              <div class="row">
        <% end %>
              <div class="cell <%= task['name'].split.join('_').downcase %>" id="<%= task['name'].split.join('_').downcase %>">
                    <% if task['done'] == true %>
                        <%=image_tag('data:image/png;base64,',
                                 class: "done")%>
                    <% end %>
                    <div class="btn"
                         onclick="<%= task['name'] == 'Nutrition' %>?showNutrition():document.location.href='<%= task['link']%>'" >
                        <%=image_tag("icons/#{task['icon']}", class: "task-icons")%>
                        <p class="button-label"><%= task['name']%></p>
                    </div>
              </div>
              <% if halt %>
                    </div>
              <% end %>
    <% end %>
</div>