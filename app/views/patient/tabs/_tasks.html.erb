<style>

  .table-div  {
    display: table;
    width: 100%;
    padding: 0px 1px 0px 1px;
  }

  .row  {
    display: table-row;
  }

  .cell {
    display: table-cell;
    width: 20%;
  }

  .btn {
    padding-bottom: 5px;
    text-align: center;
    margin: 5px;
    border: 1px solid #2e6da4;
    width: 99%;

    cursor: pointer;
    box-shadow: inset 2px -4px 2px 0px;
    background-color: white;
    border-radius: 7px;
    width: 99%;
    border: solid black 3px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -moz-box-shadow:    inset 0 0 10px #000000;
    -webkit-box-shadow: inset 0 0 10px #000000;
    box-shadow:         inset 0 0 10px #000000;


  }

  .btn p {
    font-weight: bold;
  }

  .task-icons {
    height: 90px;
    width: 90px;
    margin-top: 10%;
  }
</style>



<div class="table-div">

  <div class="row">
    <!-- loop -->
    <%if @patient_obj.sex == 'F' && @patient_obj.age > 5 %>
      <div class="cell">
        <div class="btn" onclick="document.location='/encounters/new/pregnancy_status?patient_id=
                <%=@patient_obj.patient_id%>'">
          <%=image_tag("icons/pregnacy.png", class: 'task-icons')%>
            <p class="button-label">Pregnancy status</p>
            </span>
          </div>
        </div>
      <%else%>
        <div class="cell">
          <div class="btn" style="display: none;">
            <p class="button-label">&nbsp;</p>
          </div>
        </div>
      <%end%>
      <!-- endloop -->
      <!-- loop -->
      <div class="cell">
        <%if @patient_obj.sex == 'F' || @patient_obj.age <= 5 %>
        <div class="btn" onclick="document.location='/encounters/new/female_symptoms?patient_id=
                <%=@patient_obj.patient_id%>'">
          <%=image_tag("icons/symptoms-2.png", class: 'task-icons')%>
            <p class="button-label">Symptoms</p>
            </span>
          </div>
        <%end%>
        </div>

        <!-- endloop -->
        <!-- loop -->
        <div class="cell">
          <div class="btn" onclick="document.location='/encounters/new/update_outcomes?patient_id=
                  <%=@patient_obj.patient_id%>'">
            <%=image_tag("icons/symptoms.png", class: 'task-icons')%>
              <p class="button-label">Outcomes</p>
              </span>
            </div>
          </div>
          <!-- endloop -->
          <!-- loop -->
          <div class="cell">
            <%if @patient_obj.sex == 'Female' || @patient_obj.sex == 'F'%>
            <div class="btn"   onclick="document.location='/encounters/new/schedule?patient_id=
                    <%=@patient_obj.patient_id%>'">
              <%=image_tag("icons/calendar-and-tasks.png", class: 'task-icons')%>
                <p class="button-label">Clinic schedule</p>
                </span>
              </div>
              <%end%>
            </div>
            <!-- endloop -->
            <!-- loop -->
            <div class="cell">
              <%if @patient_obj.sex == 'Female' || @patient_obj.sex == 'F'%>
              <div class="btn" onclick="document.location='/encounters/new/reminders?patient_id=
                      <%=@patient_obj.patient_id%>'">
                <%=image_tag("icons/notification.png", class: 'task-icons')%>
                  <p class="button-label">Edit reminders</p>
                  </span>
                </div>
              <%end%>
              </div>
              <!-- endloop -->
            </div>


            <div class="row">
              <!-- loop -->
              <div class="cell">
                <div class="btn" onclick='document.location="/demographics/<%=@patient_obj.patient_id%>"'>
                  <%=image_tag("icons/demographic.png", class: 'task-icons')%>
                    <p class="button-label">Edit demographics</p>
                    </span>
                  </div>
                </div>
                <!-- endloop -->
                <!-- loop -->
                <div class="cell">
                  <div class="btn" onclick="document.location='/patient/reference_material/
                          <%=@patient_obj.patient_id%>'">
                    <%=image_tag("icons/reference.png", class: 'task-icons')%>
                      <p class="button-label">Reference material</p>
                      </span>
                    </div>
                  </div>
                  <!-- endloop -->
                  <!-- loop -->
                  <div class="btn" onclick="document.location='/encounters/new/purpose_of_call?' +
                          'patient_id=<%=@patient_obj.patient_id%>'">
                    <%=image_tag("icons/call_purpose.png", class: 'task-icons')%>
                    <p class="button-label">Purpose of Call</p>
                    </span>
                  </div>
                  <!-- endloop -->
                  <!-- loop -->
                  <div class="cell">
                    <div class="btn" onclick="document.location='/patient/districts?param=verify_purpose' +
                            '&patient_id=<%=@patient_obj.patient_id%>'">
                      <%=image_tag("icons/next.png", class: 'task-icons')%>
                        <p class="button-label">Next Client</p>
                        </span>
                      </div>
                    </div>
                    <!-- endloop -->
                    <!-- loop -->
                    <div class="cell">
                      <div class="btn" onclick="document.location='/'">
                        <%=image_tag("icons/end-call.png", class: 'task-icons')%>
                          <span>
                            <p class="button-label">End Call</p>
                          </span>
                        </div>
                      </div>
                      <!-- endloop -->
                    </div>


                  </div>


