
<style>

.footer {
  padding-left: 5px;
  text-align: left;
  color: #999;
  font-size: 1.2em;
  font-style: italic;
  font-weight: bold;
  position: absolute;
  bottom: 5px;
  width: 98.5%;
  border-style: solid;
  border-width: 1px 0px 0px 0px;
  border-color: #708090;
}

</style>


<div class="footer">
  Hotline&nbsp;version:&nbsp;<%= APP_VERSION %>
  <div id="txt" style="float: right;"></div>
</div>



<script>
function startTime() {
    var today = new Date();
    var h = today.getHours();
    var m = today.getMinutes();
    var s = today.getSeconds();
    m = checkTime(m);
    s = checkTime(s);
    document.getElementById('txt').innerHTML =
    h + ":" + m + ":" + s;
    var t = setTimeout(startTime, 500);
}
function checkTime(i) {
    if (i < 10) {i = "0" + i};  // add zero in front of numbers < 10
    return i;
}

startTime();

</script>

