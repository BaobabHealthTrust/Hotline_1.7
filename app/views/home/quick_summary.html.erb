<style>

  body {
    -webkit-user-select: none;  /* Chrome all / Safari all */
    -moz-user-select: none;     /* Firefox all */
    -ms-user-select: none;      /* IE 10+ */
    user-select: none;          /* Likely future */
  }

  img {
    user-drag: none;
    user-select: none;
    -moz-user-select: none;
    -webkit-user-drag: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    pointer-events: none;
  }

  .main-page-container  {
    display: table;
    width: 100%;
    padding: 0px 1px 0px 1px;
  }

  .main-page-container-rows  {
    display: table-row;
  }

  .cells {
    display: table-cell;
  }
  /* ..................... header css ends ............................... */

  .main-table  {
    display: table;
    width: 100%;
    padding: 0px 1px 0px 1px;
  }

  .main-table-rows  {
    display: table-row;
  }

  .main-table-cells {
    display: table-cell;
  }


/* .................. button css .............. */
  .divbtn {
    height: 265px;
    display: table;
    margin-top: 10px;
    cursor:pointer;
    box-shadow: inset 2px -4px 2px 0px;
    background-color: white;
    border-radius: 7px;
    width: 99%;
    border: solid black 3px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -moz-box-shadow:    inset 0 0 10px #000000;
    -webkit-box-shadow: inset 0 0 10px #000000;
    box-shadow:         inset 0 0 10px #000000;
    text-align: center;
  }

  .icons {
    width: 160px;
    height: 160px;
    margin-top: 10%;
    text-align: middle;
  }

  .divbtn p {
    font-weight: bold;
  }

/* .................. button css ends .............. */


/* .................. stats css starts .............. */
  .stats-table  {
    display: table;
    width: 95%;
    padding: 0px 1px 0px 1px;
    margin-top: 15px;
  }

  .stats-table-rows  {
    display: table-row;
    height: 60px;
  }

  .stats-table-cells {
    display: table-cell;
    font-size: 22px;
    font-weight: bold;
    border-bottom: 1px solid black;
  }

  .row_stripped {
    background-color: lightgrey;
  }

  .row_nostrips {
    background-color: white;
  }

/* .................. stats css ends .............. */
</style>

<%= render :partial => 'header' %>

<div class="main-table">
  <div class="main-table-rows">
    
    <div class="main-table-cells" style="width: 78%; vertical-align: top; overflow: auto; height: 80%;">
      <div class="stats-table">
        <%(@stats || {}).each_with_index do |(title, count), i|
          row = 'stripped' if i.even?
          row = 'nostrips' if i.odd?
        %>
        <div class="stats-table-rows row_<%=row%>">
          <div class="stats-table-cells" style="width: 85%; padding-left: 10px; vertical-align: middle;">
            <%= title %>
          </div>
          <div class="stats-table-cells" style="width: 10%; 
            text-align: right; padding-right: 10px; vertical-align: middle;">
            <div class="stat_count"><%= count %></div>
          </div>
        </div>
        <br />
        <%end%>
      </div>
    </div>
    
    <div class="main-table-cells" style="width: 22%; vertical-align: top;">
      <div class="divbtn" onclick="document.location='/'" >
        <span class="icons">
          <%=image_tag("icons/gohome.png", class: 'icons')%>
          <p class="button-label">Home</p>
        </span>
      </div>
    </div>


  </div>
</div>

      
<%= render :partial => 'footer' %>
