  .divbtn {
    height: 265px;
    display: table;
    margin-top: 10px;
    cursor:pointer;
    box-shadow: inset 2px -4px 2px 0px;
    background-color: white;
    border-radius: 7px;
    width: 99%;
    border: solid black 3px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -moz-box-shadow:    inset 0 0 10px #000000;
    -webkit-box-shadow: inset 0 0 10px #000000;
    box-shadow:         inset 0 0 10px #000000;
  }

  .icons {
    width: 160px;
    height: 160px;
    margin-top: 10%;
    text-align: middle;
  }

  .divbtn p {
    font-weight: bold;
  }

  .btncells {
    width: 25%;
    text-align: center;
  }

  .small-icons {
    width: 100px;
    height: 100px;
  }

  .header .cells {
    vertical-align: middle;
    padding-right: 5px;
  }

  #scan {
    background-color: lightgrey;
    border-style: solid;
    border-width: 1px;
    font-size: 80px;
    margin-bottom: 6px;
    width: 44%;
  }

  .header .icons {
