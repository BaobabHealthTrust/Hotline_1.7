<%= select_tag 'district',
               options_for_select(@locations_names.sort, []), {
                :helpText => 'Caller\'s District of residence',
                :id => 'district',
                :tt_requireNextClick => false,
                :tt_onLoad => '$(nextButton).style.display = "none";'} %>

<%= hidden_field_tag("observations[][concept_name]", "Nearest health facility") %>
<%= select_tag "observations[][value_text]", nil,
               {:id => 'health_centre_name',
                :field_type => 'alpha',
                :helpText => 'Select Nearest health centre',
                :ajaxURL => "/home/health_facilities?tag=#{(address.township_division rescue session[:district])}&search_string=",
                :tt_onLoad => "$('keyboard').style.display = 'none';showCategory('IVR#: #{@patient_obj.avr_access_number}');$('nextButton').style.display = 'block';",
                :allowFreeText => true }%>