<script>
var cur_facility = "<%= @patient_obj.facility_name %>"
</script>
<%= select_tag 'district',
               options_for_select(@location_names.sort, @patient_obj.township_division), {
                :helpText => 'Client\'s District of residence',
                :id => 'district'
                } %>

<%= select_tag "nearest_health_facility", @patient_obj.facility_name,
               {:id => 'health_centre_name',
                :field_type => 'alpha',
                :helpText => 'Select nearest health centre',
                :ajaxURL => "/home/health_facilities?search_string=#{@patient_obj.facility_name}",
                :tt_onLoad => "__$('touchscreenInput' + tstCurrentPage).value = cur_facility;"
               }%>
